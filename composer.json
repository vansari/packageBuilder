{
    "name": "vansari/packagebuilder",
    "type": "project",
    "license": "MIT",
    "description": "Tool to generate package.php and packages.php files for autoloading classes.",
    "authors": [
        {
            "name": "Kurt Junker",
            "email": "kurt.junker@foo.ag",
            "role": "developer"
        }
    ],
    "bin": ["bin/package-builder"],
    "autoload": {
        "psr-4": {
            "tools\\packageBuilder\\": "src/"
        }
    },
    "require": {
        "php": ">=7.3 <8.2",
        "ext-tokenizer": "*"
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\packageBuilder\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.20"
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
